package sec02;

public class e1_브레이크예제2 {

	public static void main(String[] args) {
		
		while(true) {
			int num = (int) (Math.random()*6)+1;
			// 1부터 6까지 랜덤 숫자 추출
			System.out.println(num);
			
			if (num==6) {
				break;
			}
		}
		System.out.println("프로그램 종료");
	}

}

//15
package sec02;

public class e1_브레이크예제3 {

	public static void main(String[] args) {
		
		// 158p 바깥쪽 반복문까지 종료
		a: for (char upper = 'A'; upper <= 'Z'; upper++) {
			for (char lower = 'a'; lower <= 'z'; lower++) {
				System.out.println(upper + "-" + lower);
				if (lower == 'g') {
					break a; 
				}
			}
		}
		System.out.println("프로그램 실행 종료");
	}

}

//16
package sec02;

public class e1_연습 {

	public static void main(String[] args) {

		for (int i=0; i< 5; i++) {
			
			// 스페이스
			for(int j=0; j<i ; j++) {
				System.out.print("");
			}
			// 별
			for(int j=5; j>1 ; i-- )
			System.out.println("*");
		}
	System.out.println();
	}

}

//17
package sec02;

import java.util.Scanner;

public class e1_퀴즈2 {

	public static void main(String[] args) {

		System.out.println("광주 시립도서관 방문을 환영합니다.");
		Scanner s = new Scanner(System.in);
		int sum = 0; // 대출
		int sum2 = 0; // 반납
		boolean run = true;

		while (run) {
			System.out.println("작업코드와 개수를 입력해주세요.");
			String code = s.next(); // 예) A2, B3, CO

			char a = code.charAt(0); // A는 대출, B는 반납, C는 종료
			String b = code.substring(1); // 개수
			int c = Integer.parseInt(b);

			switch (a) {
			case 'A':
				System.out.println("책 " + c + "권 대출");
				sum += c;
				break;
			case 'B':
				System.out.println("책 " + c + "권 반납");
				sum2 += c;
				break;
			default:
				System.out.println("종료");
				run = false;

			}
		}

		System.out.println("총 대출 권수: " + sum);
		System.out.println("총 반납 권수: " + sum2);
	}

}

