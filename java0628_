package sec02;

public class d1_연습3 {

	public static void main(String[] args) {

		// 구구단 4단

		int num1 = 4;

		for (int i = 1; i <= 9; i++) {
			System.out.println(num1 + " * " + i + " = " + (num1 * i));

		}
	}

}

